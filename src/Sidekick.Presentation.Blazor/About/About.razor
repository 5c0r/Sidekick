@page "/about"

<SidekickLayout>
    <SidekickAppBar Title="@Resources.Title" View="View.About"></SidekickAppBar>
    <MudMainContent>
        <MudContainer Class="py-6">

            <MudText Typo="Typo.h4">SideKick - @ViewModel.VersionNumber</MudText>
            <MudText>@Resources.Operating_System - @ViewModel.OperatingSystem</MudText>
            <MudText>@Resources.Environment_Versions - @ViewModel.EnvironmentVersion</MudText>
            <MudDivider Class="my-1 mt-1" />
            <MudText>@Resources.Project_Page - <MudLink @onclick="@(e => ViewModel.Hyperlink_RequestNavigate(new Uri(ViewModel.ProjectUrl)))">@ViewModel.ProjectUrl</MudLink></MudText>
            <MudText>@Resources.Bug_Reports - <MudLink @onclick="@(e => ViewModel.Hyperlink_RequestNavigate(new Uri(ViewModel.BugUrl)))">@ViewModel.ProjectUrl</MudLink></MudText>

            <MudCard Class="mt-4">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">@Resources.Contributors</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    @foreach (var contributor in ViewModel.Contributors)
                    {
                        <MudText>@contributor.Key - <MudLink @onclick="@(e => ViewModel.Hyperlink_RequestNavigate(new Uri(@contributor.Value)))">@contributor.Value</MudLink></MudText>
                    }
                </MudCardContent>
            </MudCard>

            <MudCard Class="mt-4">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">@Resources.Translators</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    @foreach (var translator in ViewModel.Translators)
                    {
                        <MudText>@translator.Key - <MudLink @onclick="@(e => ViewModel.Hyperlink_RequestNavigate(new Uri(translator.Value)))">@translator.Value</MudLink></MudText>
                    }
                </MudCardContent>
            </MudCard>

            <MudCard Class="mt-4">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">@Resources.Third_Parties</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    @foreach (var thirdparty in ViewModel.ThirdParties)
                    {
                        <MudText>@thirdparty.Key - <MudLink @onclick="@(e => ViewModel.Hyperlink_RequestNavigate(new Uri(thirdparty.Value)))">@thirdparty.Value</MudLink></MudText>
                    }
                </MudCardContent>
            </MudCard>
        </MudContainer>
    </MudMainContent>
</SidekickLayout>

@code {

    [Inject] private AboutResources Resources { get; set; }
    [Inject] private AboutModel ViewModel { get; set; }

}
