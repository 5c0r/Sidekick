@page "/cheatsheets/delve"
@layout CheatsheetLayout

<MudGrid Spacing="1">
    @foreach (var region in ViewModel.Regions)
    {
        <MudItem xs="12" sm="6" md="4" lg="3">
            <Region Model="region" />
        </MudItem>
    }
</MudGrid>

@code {
    [Inject] private IMediator Mediator { get; set; }
    [Inject] private CheatsheetResources CheatsheetResources { get; set; }

    [CascadingParameter] MenuLayout Layout { get; set; }

    private DelveLeague ViewModel { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Layout.SetTitle(CheatsheetResources.Delve);
        ViewModel = await Mediator.Send(new GetDelveCheatsheetQuery());
        await base.OnInitializedAsync();
    }
}
