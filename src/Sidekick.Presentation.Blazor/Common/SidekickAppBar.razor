@using Sidekick.Domain.Views

<MudAppBar Color="Color.Primary">
    @if (!string.IsNullOrEmpty(Title))
    {
        <MudText Typo="Typo.body1">@Title</MudText>
    }
    <MudAppBarSpacer />
    <MudIconButton Icon="@Icons.Filled.Close" Color="Color.Inherit" @onclick="Close" Size="Size.Small" />
</MudAppBar>

@code {
    [Inject] private IViewLocator ViewLocator { get; set; }

    [Parameter] public string Title { get; set; }
    [Parameter] public View View { get; set; }

    public void Close()
    {
        ViewLocator.Close(View);
    }
}
