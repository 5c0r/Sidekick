@page "/map/{encodedItem}"

<SidekickLayout>
    <SidekickAppBar Title="@Resources.Title" View="View.Map"></SidekickAppBar>

    <MudMainContent>
        <MudContainer Class="py-6">
            @if (ViewModel.IsSafe)
            {
                <MudText Color="Color.Success">@Resources.Is_Safe</MudText>
            }
            @foreach (String dangerousMod in ViewModel.DangerousMapMods)
            {
                <MudText Color="Color.Error">@dangerousMod</MudText>
            }
        </MudContainer>
    </MudMainContent>
</SidekickLayout>

@code {
    [Parameter] public string EncodedItem { get; set; }
    [Inject] private MapInfoResources Resources { get; set; }
    [Inject] private MapInfoModel ViewModel { get; set; }

    protected override void OnInitialized()
    {
        ViewModel.Initialize(EncodedItem);
        base.OnInitialized();
    }
}
