@if (Modifiers.Count > 0)
{
<MudPaper Class="mt-4 pa-4">
    @foreach (Sidekick.Domain.Game.Modifiers.Models.Modifier modifier in Modifiers)
    {
        <MudElement HtmlTag="div" Class="ma-2">
            @modifier.Text @if (!String.IsNullOrWhiteSpace(modifier.Tier))
            {<MudElement HtmlTag="span" style="float:right;">@modifier.Tier</MudElement>}
        </MudElement>
    }
</MudPaper>
}
@code {
    [Parameter] public List<Sidekick.Domain.Game.Modifiers.Models.Modifier> Modifiers { get; set; }
}
