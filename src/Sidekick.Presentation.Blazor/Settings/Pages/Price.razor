@page "/settings/price"
@layout SettingsLayout
@using Sidekick.Presentation.Blazor.Settings.Components

<MudCard>
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">@Resources.Group_Keybinds</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <KeybindEditor Label="@Resources.Price_Key_Check"
                       @bind-Value="ViewModel.Price_Key_Check" />
        <KeybindEditor Label="@Resources.Price_Key_OpenSearch"
                       @bind-Value="ViewModel.Price_Key_OpenSearch" />
        <KeybindEditor Label="@Resources.Price_Key_Close"
                       @bind-Value="ViewModel.Price_Key_Close" />
    </MudCardContent>
</MudCard>
<MudCard Class="mt-6">
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">@Resources.Group_Other</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <div>
            <MudCheckBox Label="@Resources.Price_Prediction_Enable"
                         @bind-Checked="@ViewModel.Price_Prediction_Enable"></MudCheckBox>
        </div>
        <div>
            <MudCheckBox Label="@Resources.Price_CloseWithMouse"
                         @bind-Checked="@ViewModel.Price_CloseWithMouse"></MudCheckBox>
        </div>
    </MudCardContent>
</MudCard>

@code {
    [Inject] private SettingsResources Resources { get; set; }
    [Inject] private SettingsViewModel ViewModel { get; set; }
}
