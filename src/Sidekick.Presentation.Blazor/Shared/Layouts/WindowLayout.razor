@inherits LayoutComponentBase

<SidekickWrapper>
    <SidekickAppBar Title="@Title" Minimizable="true" Maximizable="true"></SidekickAppBar>
    <MudMainContent>
        <MudContainer Class="py-6">
            <CascadingValue Value="this">
                @Body
            </CascadingValue>
        </MudContainer>
    </MudMainContent>
</SidekickWrapper>

@code {
    public string Title { get; private set; }

    public void SetTitle(string title)
    {
        Title = title;
        StateHasChanged();
    }
}
