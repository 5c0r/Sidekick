<Project Sdk="Microsoft.NET.Sdk.Web">
  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <RuntimeIdentifiers>win10-x64;linux-x64</RuntimeIdentifiers>
  </PropertyGroup>
  <ItemGroup>
    <None Remove=".gitignore" />
  </ItemGroup>
  <ItemGroup>
    <Content Include=".gitignore" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Delegate.SassBuilder" Version="1.4.0" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="5.0.2">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="MudBlazor" Version="1.2.4.13-dev" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Sidekick.Infrastructure\Sidekick.Infrastructure.csproj" />
    <ProjectReference Include="..\Sidekick.Persistence\Sidekick.Persistence.csproj" />
    <ProjectReference Include="..\Sidekick.Platform\Sidekick.Platform.csproj" />
    <ProjectReference Include="..\Sidekick.Presentation\Sidekick.Presentation.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="wwwroot\css\" />
  </ItemGroup>
  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Exec Command="xcopy &quot;$(ProjectDir)styles\site.css&quot; &quot;$(ProjectDir)wwwroot\css&quot; /Y" />
  </Target>
</Project>