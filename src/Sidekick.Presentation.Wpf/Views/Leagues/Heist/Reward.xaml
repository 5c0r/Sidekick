<UserControl
    x:Class="Sidekick.Views.Leagues.Heist.Reward"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Border
        Name="Container"
        BorderBrush="{DynamicResource {x:Static adonisUi:Brushes.Layer3BackgroundBrush}}"
        Margin="0,0,0,2"
        BorderThickness="2,0,0,0">
        <Border BorderBrush="{Binding Model.Color}" BorderThickness="3,0,0,0">
            <WrapPanel>
                <Image Height="40" Source="{Binding Image}" />
                <TextBlock
                    Padding="3,0,0,0"
                    VerticalAlignment="Center"
                    Text="{Binding Model.Reward}"
                    TextWrapping="WrapWithOverflow" />
            </WrapPanel>
        </Border>
    </Border>
</UserControl>
