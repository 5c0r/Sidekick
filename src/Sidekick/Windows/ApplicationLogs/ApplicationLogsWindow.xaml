<Window
    x:Class="Sidekick.Windows.ApplicationLogs.ApplicationLogsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Sidekick - Logs"
    Width="960"
    Height="320"
    MinWidth="960"
    MinHeight="320"
    WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ResourceDictionary Source="/Styles/Main.xaml" />
    </Window.Resources>

    <Window.Style>
        <Style BasedOn="{StaticResource WindowTool}" TargetType="Window" />
    </Window.Style>

    <ScrollViewer Name="logsScrollViewer" Margin="{StaticResource Spacer}">
        <TextBox
            Name="logsTextBox"
            IsReadOnly="True"
            Style="{StaticResource TextArea}"
            TextWrapping="NoWrap" />
    </ScrollViewer>
</Window>
