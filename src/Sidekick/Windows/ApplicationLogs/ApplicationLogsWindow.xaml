<Window
    x:Class="Sidekick.Windows.ApplicationLogs.ApplicationLogsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:r="clr-namespace:Sidekick.Localization.Logs;assembly=Sidekick.Localization"
    Title="Logs - Sidekick"
    Width="720"
    Height="360"
    MouseLeftButtonDown="Window_MouseLeftButtonDown"
    ShowInTaskbar="True"
    Topmost="False"
    WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ResourceDictionary Source="/Styles/Main.xaml" />
    </Window.Resources>

    <Window.Style>
        <Style BasedOn="{StaticResource {x:Type Window}}" TargetType="Window" />
    </Window.Style>

    <DockPanel Margin="{StaticResource Spacer}">
        <WrapPanel HorizontalAlignment="Right" DockPanel.Dock="Bottom">
            <Button Click="Button_Click" Content="{x:Static r:LogResources.Close}" />
        </WrapPanel>
        <ScrollViewer Name="logsScrollViewer" Margin="{StaticResource SpacerBottom}">
            <TextBox
                Name="logsTextBox"
                IsReadOnly="True"
                Style="{StaticResource TextArea}"
                TextWrapping="NoWrap" />
        </ScrollViewer>
    </DockPanel>
</Window>
