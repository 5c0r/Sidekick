<UserControl
    x:Class="Sidekick.Windows.Leagues.Delve.Fossil"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Sidekick.Windows.Leagues.Delve"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel Name="Container">
        <TextBlock>
            <Label Content="{Binding Path=Name}" Foreground="{Binding Path=Color}" />
            <Label Name="BehindFracturedWall" Content="*" />
        </TextBlock>
    </StackPanel>
</UserControl>
