<UserControl
    x:Class="Sidekick.Windows.PriceCheck.UserControls.ItemListingControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140*" />
            <ColumnDefinition Width="140*" />
            <ColumnDefinition Width="80*" />
            <ColumnDefinition Width="40*" />
            <ColumnDefinition Width="80*" />
        </Grid.ColumnDefinitions>

        <TextBlock
            Name="accountNameTextbox"
            Grid.Column="0"
            Text="AccountName" />
        <TextBlock
            Name="characterNameTextbox"
            Grid.Column="1"
            Text="CharacterName" />
        <TextBlock
            Name="priceTextbox"
            Grid.Column="2"
            Text="Price" />
        <TextBlock
            Name="itemLevelTextbox"
            Grid.Column="3"
            Text="iLvl" />
        <TextBlock
            Name="ageTextbox"
            Grid.Column="4"
            Text="Age" />
    </Grid>
</UserControl>
