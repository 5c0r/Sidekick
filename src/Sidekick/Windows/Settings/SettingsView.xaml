<Window
    x:Class="Sidekick.Windows.Settings.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:UC="clr-namespace:Sidekick.Windows.Settings.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="640"
    Height="400"
    AllowsTransparency="True"
    Background="{DynamicResource SolidColorBrush_BackgroundTransparent}"
    MouseLeftButtonDown="Window_MouseLeftButtonDown"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    Topmost="True"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <DockPanel Margin="10">
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="40" />
            </Grid.RowDefinitions>
            <TabControl
                Grid.Row="0"
                Background="Transparent"
                BorderBrush="Transparent"
                TabStripPlacement="Left">
                <TabItem x:Name="tabItemGeneral" Header="General">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="77*" />
                            <ColumnDefinition Width="169*" />
                            <ColumnDefinition Width="246*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <GroupBox
                            x:Name="groupBoxWikiSettings"
                            Grid.Row="0"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="1"
                            Header="Wiki Settings" />
                        <GroupBox
                            x:Name="groupBoxLanguageSettings"
                            Grid.Row="0"
                            Grid.Column="2"
                            Margin="1"
                            Header="LanguageSettings">
                            <Label
                                x:Name="labelLanguageDescription"
                                Width="187"
                                Margin="20,13,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="Choose Sidekick's UI Language"
                                FontSize="11"
                                Foreground="{DynamicResource SolidColorBrush_Light}" />
                        </GroupBox>
                        <GroupBox
                            Grid.Row="1"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="1,1,1,0"
                            Header="Settings Group 3">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <Label
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    VerticalContentAlignment="Center"
                                    Content="Character Name"
                                    Foreground="{DynamicResource SolidColorBrush_Light}" />
                                <TextBox
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Margin="1"
                                    VerticalContentAlignment="Center"
                                    BorderBrush="{DynamicResource SolidColorBrush_Primary}"
                                    BorderThickness="1"
                                    Foreground="{DynamicResource SolidColorBrush_Light}"
                                    IsReadOnly="False"
                                    Text="{Binding Path=Settings.CharacterName}">
                                    <TextBox.ContextMenu>
                                        <ContextMenu Visibility="Collapsed" />
                                    </TextBox.ContextMenu>
                                </TextBox>
                                <CheckBox
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2"
                                    VerticalContentAlignment="Center"
                                    Content="Retain Clipboard Data"
                                    Foreground="{DynamicResource SolidColorBrush_Light}"
                                    IsChecked="{Binding Path=Settings.RetainClipboard}" />
                                <CheckBox
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2"
                                    VerticalContentAlignment="Center"
                                    Content="Close Overlay with Mouse Click"
                                    Foreground="{DynamicResource SolidColorBrush_Light}"
                                    IsChecked="{Binding Path=Settings.CloseOverlayWithMouse}" />
                                <CheckBox
                                    Grid.Row="3"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2"
                                    VerticalContentAlignment="Center"
                                    Content="Enable CTRL + Scroll"
                                    Foreground="{DynamicResource SolidColorBrush_Light}"
                                    IsChecked="{Binding Path=Settings.EnableCtrlScroll}" />
                            </Grid>
                        </GroupBox>
                        <GroupBox
                            Grid.Row="1"
                            Grid.Column="2"
                            Margin="1"
                            Header="Settings Group 4" />
                        <Grid
                            Grid.ColumnSpan="2"
                            Width="241"
                            Height="151"
                            Margin="1,19,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            RenderTransformOrigin="0.48,0.51">
                            <RadioButton
                                x:Name="radioButtonPOEWiki"
                                Margin="19,55,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Background="White"
                                Content="POE Wiki"
                                Foreground="{DynamicResource SolidColorBrush_Light}" />
                            <RadioButton
                                x:Name="radioButtonPOEDb"
                                Margin="19,87,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="POE Db"
                                Foreground="{DynamicResource SolidColorBrush_Light}" />
                            <Label
                                x:Name="labelWikiDescription"
                                Width="231"
                                Margin="0,10,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="Choose which Wiki Page should be displayed"
                                FontSize="11"
                                Foreground="{DynamicResource SolidColorBrush_Light}" />
                        </Grid>
                        <ComboBox
                            x:Name="comboBoxUILanguages"
                            Grid.Column="2"
                            Width="100"
                            Height="25">
                            <ComboBox.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Offset="0" Color="#FFF0F0F0" />
                                    <GradientStop Offset="1" Color="White" />
                                </LinearGradientBrush>
                            </ComboBox.Background>
                        </ComboBox>
                    </Grid>
                </TabItem>
                <TabItem x:Name="tabItemKeybindings" Header="Keybindings">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Path=Keybinds}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <UC:KeybindEditor
                                        HotkeyChanged="KeybindEditor_HotkeyChanged"
                                        HotkeyChanging="KeybindEditor_HotkeyChanging"
                                        Property="{Binding Path=Key}"
                                        Value="{Binding Path=Value}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </TabItem>
            </TabControl>

            <Grid Grid.Row="1" HorizontalAlignment="Right">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button
                    Grid.Column="1"
                    Click="SaveChanges_Click"
                    Content="Ok" />
                <Button
                    Grid.Column="0"
                    Click="DiscardChanges_Click"
                    Content="Cancel" />
            </Grid>
        </Grid>

    </DockPanel>
</Window>
